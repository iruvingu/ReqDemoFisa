<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/secondList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/row_second_table"
            tools:itemCount="6"
    />

    <LinearLayout
            android:id="@+id/titleContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/secondList">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="Sucursal"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="EPRC"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="0-14"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="30-59"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        <TextView
                android:id="@+id/PlusTaso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="90+"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="EPRC"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="0-14"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="30-59"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rowPar"
                android:text="90+"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcance TASO"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/titleContent"
            app:layout_constraintVertical_bias="0.709"
            android:id="@+id/textView" android:layout_marginStart="160dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.017"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:textSize="24sp"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/titleContent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.755" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.871"
            android:id="@+id/textView2"/>

</android.support.constraint.ConstraintLayout>