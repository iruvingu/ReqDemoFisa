<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.TableOneFragment">

    <LinearLayout
            android:id="@+id/titleContent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:layout_weight="12"
            app:layout_constraintBottom_toTopOf="@id/tableList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"
                android:layout_margin="1dp"
                android:text="@string/calidad_sucursal"
                android:layout_gravity="center"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:background="@color/rowPar"
                android:textColor="@color/black"
                android:text="EPRC"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:background="@color/rowPar"
                android:textColor="@color/black"
                android:text="0-14"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:textSize="10sp"
                android:background="@color/rowPar"
                android:textColor="@color/black"
                android:text="1-29"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="30-59"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="60-89"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="60-89"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="90-119"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="119-149"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="150-179"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="TASO"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:background="@color/rowPar"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/tableList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/row_table"
            tools:itemCount="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


</android.support.constraint.ConstraintLayout>