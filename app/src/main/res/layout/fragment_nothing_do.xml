<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools">

 <LinearLayout
  android:id="@+id/containerTitles"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:weightSum="5"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintTop_toTopOf="parent"
  >

  <TextView
   android:id="@+id/firstColumn"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="EPRC"
   android:textSize="12sp"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:gravity="center"
   />

  <TextView
   android:id="@+id/secondColumn"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="0 - 14"
   android:textSize="12sp"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:gravity="center"
   />

  <TextView
   android:id="@+id/thirdColumn"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="1 - 29"
   android:textSize="12sp"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:gravity="center"
   />

  <TextView
   android:id="@+id/fourthColumn"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="30 - 59"
   android:textSize="12sp"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:gravity="center"
   />
  <TextView
   android:id="@+id/fifthColumn"
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="60 - 89"
   android:textSize="12sp"
   android:paddingTop="5dp"
   android:paddingBottom="5dp"
   android:paddingStart="10dp"
   android:paddingEnd="10dp"
   android:gravity="center"
   />

 </LinearLayout>

 <android.support.v7.widget.RecyclerView
  android:id="@+id/dataRecycler"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintTop_toBottomOf="@id/containerTitles"
  app:layoutManager="android.support.v7.widget.LinearLayoutManager"
  tools:listitem="@layout/row_table_pager"
  tools:itemCount="6"
  />

</android.support.constraint.ConstraintLayout>
